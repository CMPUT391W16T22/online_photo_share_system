     if (!preg_match("/^[a-zA-Z ]*$/",$last_name)) {
       $last_nameErr = "Only letters and white space allowed";
       $check = 0;
     }
   }
   if (empty($_POST["first_name"])) {
     $first_nameErr = "First Name is required";
     $check = 0;
